{% extends "master.jinja" %}

{% block master_title %}
    Login Form
{% endblock %}

{% block contents %}
    <div class="container">
        <div id="loginform" class=" col-md-4">
            <form action="{{ tg.url('/login_handler', params=dict(came_from=came_from, __logins=login_counter)) }}"
                  method="post" accept-charset="UTF-8" class="loginfields">
                <h2><span>Login</span></h2>

                <div class="form-group">
                    <input type="text" id="loginusername" name="login" class="form-control" placeholder="Username"/>
                </div>
                <div class="form-group">
                    <input type="password" id="loginpassword" name="password" class="form-control"
                           placeholder="Password"/>
                </div>
                <div class="form-group">
                    <label id="labelremember" for="loginremember">remember me</label>
                    <input type="checkbox" id="loginremember" name="remember" value="2252000" class="form-control"/>
                </div>
                <input type="submit" id="submit" value="Login" class="form-control"/>
            </form>
        </div>
    </div>


{% endblock %}