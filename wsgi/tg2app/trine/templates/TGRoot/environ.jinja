                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select> </label></div>
        <div class="toolbar">
            <div class="table-tools-actions">
                <button id="test2" style="margin-left:12px" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="dataTables_filter" id="example3_filter"><label>Search: <input type="text" aria-controls="example3"
                                                                                  class="input-medium"></label></div>
    </div>
</div>
<table id="example3" class="table dataTable" aria-describedby="example3_info">
<thead>
<tr role="row">
    <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" style="width: 163px;"
        aria-label="Rendering engine">Rendering engine
    </th>
    <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="example3" rowspan="1" colspan="1"
        style="width: 239px;" aria-sort="ascending" aria-label="Browser: activate to sort column descending">Browser
    </th>
</tr>
</thead>

<tbody role="alert" aria-live="polite" aria-relevant="all">
        {% for key in environment.keys()|sort %}
            <tr>
                <td>{{ key }}</td>
                <td>{{ environment[key]|string }}</td>
            </tr>
        {% endfor %}
</tbody>
</table>
<div class="row">
    <div class="col-md-12">
        <div class="dataTables_paginate paging_bootstrap pagination">
            <ul>
                <li class="prev disabled"><a href="#"><i class="fa fa-chevron-left"></i></a></li>
