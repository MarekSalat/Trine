import os
here = os.path.dirname(os.path.abspath(__file__))
os.environ['PYTHON_EGG_CACHE'] = os.path.join(here, '..', 'data', 'python-eggs')
 
virtualenv = os.path.join(here, '..', 'data/env/Scripts/activate_this.py')
#execfile(virtualenv, dict(__file__=virtualenv))
with open(virtualenv) as f:
    code = compile(f.read(), virtualenv, 'exec')
    exec(code, dict(__file__=virtualenv))
 
from paste.deploy import loadapp
tgapp = os.path.join(here, '..', 'data', 'myproject')
application = loadapp('config:development.ini', relative_to=tgapp)
 
if __name__ == '__main__':
    from wsgiref.simple_server import make_server
    httpd = make_server('localhost', 8051, application)
    # Wait for a single request, serve it and quit.
    httpd.handle_request()